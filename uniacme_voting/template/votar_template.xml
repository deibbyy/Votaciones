<odoo>
    <template id="votar_template">
        <t t-call="website.layout">
            <t t-set="page_title" t-value="'Votar'"/>
            <div class="container">
                <h1>Votar</h1>
                <p>Bienvenido, <t t-esc="estudiante.name"/></p>
                <form method="post" action="/votacion/estudiante/submit">
                    <input type="hidden" name="estudiante" t-att-value='estudiante'/>
                    <input type="hidden" name="votacion" t-att-value='votacion'/>
                    <div class="candidates-grid">
                        <t t-foreach="candidatos" t-as="candidato">
                            <div class="candidate-item">
                                <!-- <img t-att-src="'data:image/png;base64,' + candidato.image_1920.decode('utf-8')" width="100" height="100"/> -->
                                <p><t t-esc="candidato.name"/></p>
                                <input type="radio" name="candidato_id" t-att-value="str(candidato.id)"/>
                            </div>
                        </t>
                    </div>
                    <button type="submit">Votar</button>
                </form>
            </div>
        </t>
    </template>
</odoo>
